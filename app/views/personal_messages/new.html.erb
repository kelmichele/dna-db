<% @page_title = "New Message" %>

<div class="full">
	<div class="wrap">
		<h1>New message to <%= @receiver.name %></h1>
		<hr class="title-line">
		<div class="clearfix"></div>

		<%= form_for @personal_message do |f| %>
		  <%= hidden_field_tag 'receiver_id', @receiver.id %>

		  <%= f.label :body %>
		  <%= f.text_area :body %>
			<br>
		  <%= f.submit %>
		<% end %>
	</div>
</div>
