<% @page_title = "Chatrooms" %>

<div class="full">
  <div class="wrap" style="height:290px;">
    <div class="col-md-8">
      <h3>Chatrooms: <b><%= Chatroom.all.count %></b></h3>
      <h3>Messages: <b><%= Note.all.count %></b></h3>
      <h3>Users: <b><%= User.all.count %></b></h3>
      <hr>
      <p>Open: <%= open_line.count %></p>
      <p>Closed: <%= closed_line.count %></p>
    </div>

    <div class="col-md-3 text-center">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">User list</h3>
        </div>

        <div class="panel-body">
          <ul>
            <% @users.each do |user| %>
            <li><%= link_to user.name, chatrooms_path(user_id: user), remote: true, method: :post %></li>
            <br>
            <% end %>
          </ul>
        </div>

      </div>
    </div>
  </div>
</div>
<%= render 'chatrooms/chatbox' %>



