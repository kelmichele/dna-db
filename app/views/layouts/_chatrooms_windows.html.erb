<% unless user_signed_in? && current_user.admin? %>
		<div class="live-chat customer">
			<%= image_tag('chat.png', class:'chat-icon') %>
			<%= link_to chatrooms_path(user_id: boss_admin), remote: true, method: :post do %>
				<%= admin_online_status boss_admin %>
			<% end %>
		</div>
<% end %>

<ul id="chatrooms-list">
	<% chatrooms_windows.each do |chatroom| %>
	  <%= render partial: "chatrooms/chatroom",
	             locals: { chatroom: chatroom,
	                       user: current_or_guest_user } %>
	<% end %>
</ul>

