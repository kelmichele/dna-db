<%= render 'shared/errors', obj: @clinic %>

<div class="state-form">
  <%= form_for(@clinic, :html => {class: "form-horizontal", role: "form" }) do |f| %>
    <div class="form-group">
      <div class="col-md-3">
        <%= f.label :address %>
        <br>
        <%= f.text_field :address, class: "form-control", placeholder: "Street Address", autofocus: true %>
      </div>

      <div class="col-md-2">
        <%= f.label :zipcode %>
        <br>
        <%= f.text_field :zipcode, class: "form-control", placeholder: "Zipcode", autofocus: true %>
      </div>

      <div class="col-md-3">
        <%= f.label "City" %>
        <br>
        <%= f.collection_select(:town_id, Town.all, :id, :townname) %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit(@clinic.new_record? ? "Add Clinic" : "Update Clinic", class: "btn btn-primary") %>
      </div>
    </div>
  <% end %>
</div>
