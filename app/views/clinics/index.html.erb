<% @page_title = "All Locations" %>

<div class="full">
	<div class="wrap">
		<h2>Import Locations</h2>
		<%= form_tag import_clinics_path, multipart: true do %>
		  <%= file_field_tag :file %>
		  <br>
		  <%= submit_tag "Import" %>
		<% end %>
	</div>

	<div class="all-clinics">
		<div class="wrap clinics">
			<h1><%= @page_title %> </h1>
			<%= link_to("Add New Location", new_clinic_path, :class => 'action new btn-add inline') %>
			<table class="clinics">
				<% @clinics.each do |clinic| %>
		  		<div class="clinic-bx">
		      	<!-- <h4><%= clinic.address %><br> <%= link_to clinic.town.townname, town_path(clinic.town) %>, <%= link_to clinic.state.abv, state_path(clinic.state) %> <%= clinic.zipcode %><br> -->

						<h4><%= simple_format(clinic.full_address)%></h4>
		  			<div class="actions"><small><%= link_to("Edit Location", edit_clinic_path(clinic)) %></small></div>
		  			<br><br>
		  		</div>
			  <% end %>
			</table>
		</div>
	</div>
</div>


