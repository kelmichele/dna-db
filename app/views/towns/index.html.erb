<% @page_title = "Cities" %>


<div class="full">
	<div class="wrap">
		<h2>Import Locations</h2>
		<%= form_tag import_towns_path, multipart: true do %>
		  <%= file_field_tag :file %>
		  <br>
		  <%= submit_tag "Import" %>
		<% end %>
	</div>
</div>


<div class="full">
	<div class="wrap">
		<h1><%= @page_title %> </h1>
		<table class="listing">
			<% @towns.each do |town| %>
		  <tr>
		    <td><p>&nbsp;<%= town.townname %></p></td>
		    <td><p>&nbsp;<%= town.state_id %></p></td>
		  </tr>
		  <% end %>
		</table>
	</div>
</div>



