<% @page_title = @state.name.capitalize %>

<div class="full">
	<div class="wrap">
	  <h1>Get DNA Tested Today in <span><%= @state.name %></span></h1>
	  <hr class="title-line">
		<div class="clearfix"></div>
		<%= render 'shared/dna-text' %>

		<br><hr><br>
		<%= tag.div class: 'col-md-5' do %>
			<%= render 'shared/search_btn' %>
		<% end %>

		<%= tag.div class: 'col-md-6' do %>
			<%= render 'shared/add_btns' %>
		<% end %>
		<div class="clearfix"></div>
		<br><hr><br>
	</div>

	<div class="all-towns">
		<div class="wrap">

  		<% if @state_towns.count != 0 %>
	  		<div class="col-md-4 col-md-offset-1">
					<table class="listing">
						<% @state_towns.each do |town| %>
							<tr>
								<!-- <td><h4 class="state-name"><%= link_to town.townname.capitalize, town_path(town) %></h4></td> -->
							  <td><h4 class="state-name"><%= link_to town.townname.capitalize, town_path(town) %> - (<%= town.id %>)&nbsp;</h4></td>
						    <td><p><small>(<%= town.locations.count %>)</small></p></td>
						  </tr>
			  		<% end %>
					</table>
				</div>

	  		<div class="col-md-5">
					<%= render 'shared/map' %>
	  		</div>

  		<% else %>
			 	<p>Unfortunately, we have no testing locations in <%= @state.name %>, but you can still follow the link below, and order an At Home DNA Test Kit Today!</p>
			<% end %>
		</div>
	</div>

	<div class="wrap">
		<%= link_to("Back to States", states_path, :class => 'back-link') %>
	</div>
</div>
