<% @page_title = "Paternity Testing Locations" %>
<% @page_description = "New Description" %>

<div class="all-states">
	<div class="wrap">
		<div class="top">
			<h1><%= @page_title %></h1>
			<hr class="title-line">
			<div class="clearfix"></div>
			<div class="shared-text">
				<p>Get DNA Tested Today provides affordable DNA/Paternity Testing at over 2500 locations nationwide. All of our testing locations are certified and accredited by the AABB and ISO 17025.</p>
				<p><%= link_to "Click Here", testing_path %> to schedule your testing appointment today!<br>
				If you have any questions, or want to speak to a certified collector, please call us at <span><%= phone %></span>.</p>
			</div>
		</div>

		<div class="add-btns-blk">
			<%= render 'shared/add_btns' %>
		</div>
		<div class="clearfix"></div>
		<br><hr><br>

		<div class="full">
			<table class="listing state-list">
				<% for state in @cols_o %>
					<tr class="tfw">
					  <td>
							<%= image_tag("seals/#{state.name.upcase}.png", class: 'state-icons') %>
					  	<h4 class="state-name">
					  		<!-- <span><%= state.id %>.</span> &nbsp; -->
					  		<%= link_to state.name, state_path(state) %>
					  	</h4>
					  </td>

						<% if user_signed_in? && current_user.admin? %>
					  	<td class="print"><p class="info"><%= state.abv %> &nbsp;&nbsp; (<%= state.towns.count %>)</p></td>
					  	<!-- <td> <%= link_to state.name, edit_state_path(state) %></td> -->
					  <% end %>
					</tr>
			  <% end %>
			</table>

			<table class="listing state-list">
				<% for state in @cols_t %>
					<tr class="tfw">
					  <td>
							<%= image_tag("seals/#{state.name.upcase}.png", class: 'state-icons') %>
					  	<h4 class="state-name">
					  		<!-- <span><%= state.id %>.</span> &nbsp; -->
					  		<%= link_to state.name, state_path(state) %>
					  	</h4>
					  </td>

						<% if user_signed_in? && current_user.admin? %>
					  	<td class="print"><p class="info"><%= state.abv %> &nbsp;&nbsp; (<%= state.towns.count %>)</p></td>
					  <% end %>
					</tr>
			  <% end %>
			</table>

			<table class="listing state-list">
				<% for state in @cols_th %>
					<tr class="tfw">
					  <td>
							<%= image_tag("seals/#{state.name.upcase}.png", class: 'state-icons') %>
					  	<h4 class="state-name">
					  		<!-- <span><%= state.id %>.</span> &nbsp; -->
					  		<%= link_to state.name, state_path(state) %>
					  	</h4>
					  </td>

						<% if user_signed_in? && current_user.admin? %>
					  	<td class="print"><p class="info"><%= state.abv %> &nbsp;&nbsp; (<%= state.towns.count %>)</p></td>
					  <% end %>
					</tr>
			  <% end %>
			</table>

			<table class="listing state-list">
				<% for state in @cols_fo %>
					<tr class="tfw">
					  <td>
							<% unless state.name == "Washington DC" %><%= image_tag("seals/#{state.name.upcase}.png", class: 'state-icons') %> <% end %>
					  	<h4 class="state-name">
					  		<!-- <span><%= state.id %>.</span> &nbsp; -->
					  		<%= link_to state.name, state_path(state) %>
					  	</h4>
					  </td>

						<% if user_signed_in? && current_user.admin? %>
					  	<td class="print"><p class="info"><%= state.abv %> &nbsp;&nbsp; (<%= state.towns.count %>)</p></td>
					  <% end %>
					</tr>
			  <% end %>
			</table>
		</div>

	</div>
</div>



