<li class="chatroom-window" id="<%= chatroom.id %>" >
<!-- <li class="pers-chat"> -->
  <div class="panel panel-default" data-chatroom-id="<%= chatroom.id %>">
    <div class="panel-heading">

      <%= link_to chatroom.opposed_user(user).email, class: 'toggle-window' do %>
        <%= image_tag('chat.png', class:'chat-icon') %>
        <% if boss_admin.online? %>
          <span class="ofc-online"><b>Online</b> - Chat with us</span>
        <% else %>
          <span class="ofc-offline"><b>Away</b> - Send us a message</span>
        <% end %>

        <div class="btn btn-xs exp">â€”</div>
      <% end %>

        <%= link_to "X", close_chatroom_path(chatroom), class: "btn btn-xs pull-right", remote: true, method: :post %>
        <!-- <%= link_to "X", close_chatroom_path(chatroom), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-xs pull-right" %>  -->
    </div>

    <div class="panel-body" style="display: none;">
      <div class="notes-list">
        <ul>
          <%= render 'chatrooms/chatroom_content', notes: chatroom.notes, user: user %>
        </ul>
      </div>

      <form class="new_note">
        <input name="chatroom_id" type="hidden" value="<%= chatroom.id %>">
        <input name="user_id" type="hidden" value="<%= user.id %>">
        <textarea name="body" class="form-control"></textarea>
        <input type="submit" class="btn btn-success" value="Send">
        <!-- <%= link_to 'Open in New Tab', chats_path, class: 'tab-link' %>  -->
      </form>

    </div>
  </div>
</li>
