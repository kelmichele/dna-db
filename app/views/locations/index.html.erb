<% @page_title = "Locations Full" %>

<%= tag.div class: 'full' do %>
	<%= tag.div class: 'wrap' do %>
		<%= tag.h1 @page_title %>
		<hr><br>

		<%= tag.div class: 'col-md-5' do %>
			<%= form_with(url: locations_path, class: "form-inline", local: true, method: :get) do |f| %>
	      <%= f.text_field :near, class: "form-control", placeholder: "Search" %>
	      <%= f.submit "Search", class: "btn btn-outline-secondary" %>
	    <% end %>
		<% end %>

		<%= tag.div class: 'col-md-5 col-md-offset-1' do %>
			<% if user_signed_in? && current_user.admin? %>
				<%= link_to("Add New Location", new_location_path, :class => 'action new btn-add inline') %>

				<%= tag.h4 "Import Locations", class: 'tmargin0 bmargin5' %>
				<%= form_tag import_locations_path, multipart: true do %>
				  <%= file_field_tag :file, class: 'bmargin5' %>
				  <%= tag.div class: 'clearfix' %>
				  <%= submit_tag "Import" %>
				<% end %>
			<% end %>
		<% end %>
	<% end %>
<% end %>


<%= tag.div class: 'full' do %>
	<%= tag.div class: 'wrap' do %>

		<%= tag.div class: 'col-md-5' do %>
			<%= tag.table class:'loclist' do %>
				<% @locations.each do |location| %>
				  <%= tag.tr class:'townlisting-bx' do %>
						<%= tag.h4 simple_format(location.full_address) %>
				  <% end %>
			  <% end %>
			<% end %>
		<% end %>

		<%= tag.div class: 'col-md-6' do %>
			<%= tag.div nil, id: 'map', data: { locations: @locations.to_json(methods: [:address]), l: params[:l] } %>
		  <%= tag.div class: 'clearfix' %><br>
			<%= link_to "Redo search in this area", "#", id: "redo-search" %>
		<% end %>

	<% end %>
<% end %>
