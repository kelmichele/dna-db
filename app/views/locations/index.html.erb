<% @page_title = "Our Locations" %>

<%= tag.div class: 'full' do %>
	<%= tag.div class: 'wrap' do %>
		<%= tag.h1 @page_title %>
		<hr class="title-line">
		<div class="clearfix"></div>
		<%= render 'shared/dna-text' %>
		<br><hr><br>

		<%= tag.div class: 'col-md-5' do %>
			<%= render 'shared/search_btn' %>
		<% end %>

		<%= tag.div class: 'col-md-5 col-md-offset-1' do %>
			<%= render 'shared/add_btns' %>
		<% end %>

		<div class="clearfix"></div>
		<br><hr><br>
	<% end %>
<% end %>

<%= tag.div class: 'full' do %>
	<%= tag.div class: 'wrap location-map' do %>
		<%= tag.div class: 'col-md-4 col-md-offset-1' do %>

			<%= tag.table class:'loclist' do %>
				<% @locations.each do |location| %>
				  <%= tag.tr class:'townlisting-bx' do %>
						<%= simple_format(location.full_address)%>
		  			<div class="actions"><small><%= link_to("Edit Location", edit_location_path(location)) %></small></div>
				  <% end %>
			  <% end %>
			<% end %>
		<% end %>

		<%= tag.div class: 'col-md-5' do %>
			<%= tag.div nil, id: 'map', data: { locations: @locations.to_json(methods: [:address]), l: params[:l] } %>
		  <%= tag.div class: 'clearfix' %><br>
			<%= link_to "Redo search in this area", "#", id: "redo-search" %>
		<% end %>

	<% end %>
<% end %>
