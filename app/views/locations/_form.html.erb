<%= render 'shared/errors', obj: @location %>

<div class="state-form">
  <%= form_for(@location, :html => {class: "form-horizontal", role: "form" }) do |f| %>
    <div class="form-group">
      <div class="col-md-3">
        <%= f.label :street %><br>
        <%= f.text_field :street, class: "form-control", placeholder: "Enter Address", autofocus: true %>
      </div>

      <div class="col-md-2">
        <%= f.label :city %><br>
        <%= f.text_field :city, class: "form-control", placeholder: "City", autofocus: true %>
      </div>

      <div class="col-md-2">
        <%= f.label :state %><br>
        <%= f.text_field :state, class: "form-control", placeholder: "State", autofocus: true %>
      </div>

      <div class="col-md-1">
        <%= f.label :abrv %><br>
        <%= f.text_field :abrv, class: "form-control", placeholder: "State Abv", autofocus: true %>
      </div>

      <div class="col-md-2">
        <%= f.label :zip %><br>
        <%= f.text_field :zip, class: "form-control", placeholder: "Zipcode", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit(@location.new_record? ? "Add Location" : "Update Location", class: "btn btn-primary") %>
      </div>
    </div>
  <% end %>
</div>
